  padding: 10px;\r\n  box-sizing: border-box;\r\n  border-radius: 5px;\r\n  border: 1px solid #ccc;\r\n}\r\n\r\nbutton {\r\n  width: 100%;\r\n  background-color: #0d6efd;\r\n  color: white;\r\n  border: none;\r\n  padding: 12px;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #0b5ed7;\r\n}\r\n\r\n.mensagem {\r\n  margin-top: 15px;\r\n  text-align: center;\r\n  font-weight: bold;\r\n}\r\n</style>\r\n"],"mappings":"AA2DA,OAAOA,KAAI,MAAO,OAAO;AAGzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;QACJC,IAAI,EAAE,EAAE;QACRC,QAAQ,EAAE,EAAE;QACZC,SAAS,EAAE,EAAE;QACbC,KAAK,EAAE;MACT,CAAC;MACDC,QAAQ,EAAE,EAAE;MACZC,UAAU,EAAE,IAAI,CAAE;IACpB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACV,IAAI,CAACC,aAAa,CAAC,CAAC;EACtB,CAAC;EACCC,OAAO,EAAE;IACN,MAAMD,aAAaA,CAAA,EAAG;MACnB,MAAME,GAAE,GAAI,MAAMZ,KAAK,CAACa,GAAG,CAAC,QAAQ,CAAC;MACrC,IAAI,CAACC,KAAI,GAAIF,GAAG,CAACX,IAAI;IACvB,CAAC;IACJ,MAAMc,SAASA,CAAA,EAAG;MACjB,IAAI;QACF,MAAMC,IAAG,GAAIC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,MAAM,CAAC,CAAC;QACrD,MAAMC,cAAa,GAAIL,IAAI,EAAEM,GAAG;QAEhC,IAAI,IAAI,CAACd,UAAU,EAAE;UACnB,MAAMR,KAAK,CAACuB,GAAG,CAAC,UAAU,IAAI,CAACf,UAAU,EAAE,EAAE,IAAI,CAACN,IAAI,CAAC;UACvD,IAAI,CAACK,QAAO,GAAI,8BAA8B;QAChD,OAAO;UACL,MAAMP,KAAK,CAACwB,IAAI,CAAC,QAAQ,EAAE;YAAE,GAAG,IAAI,CAACtB,IAAI;YAAEmB;UAAe,CAAC,CAAC;UAC5D,IAAI,CAACd,QAAO,GAAI,0BAA0B;QAC5C;QAEA,IAAI,CAACL,IAAG,GAAI;UAAEC,IAAI,EAAE,EAAE;UAAEC,QAAQ,EAAE,EAAE;UAAEC,SAAS,EAAE,EAAE;UAAEC,KAAK,EAAE;QAAG,CAAC;QAChE,IAAI,CAACE,UAAS,GAAI,IAAI;QACtB,IAAI,CAACE,aAAa,CAAC,CAAC;MACtB,EAAE,OAAOe,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAACA,KAAK,CAAC;QACpB,IAAI,CAAClB,QAAO,GAAI,sBAAsB;MACxC;IACF,CAAC;IAEDoB,UAAUA,CAACzB,IAAI,EAAE;MACf,IAAI,CAACA,IAAG,GAAI;QAAE,GAAGA;MAAK,CAAC,EAAE;MACzB,IAAI,CAACM,UAAS,GAAIN,IAAI,CAACoB,GAAG;IAC5B,CAAC;IAED,MAAMM,UAAUA,CAACC,EAAE,EAAE;MACnB,IAAIC,OAAO,CAAC,0CAA0C,CAAC,EAAE;QACvD,IAAI;UACF,MAAM9B,KAAK,CAAC+B,MAAM,CAAC,UAAUF,EAAE,EAAE,CAAC;UAClC,IAAI,CAACtB,QAAO,GA